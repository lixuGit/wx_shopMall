/* pages/component/detail/detail.wxss */
.goods-box {
  padding: 40rpx;
  text-align: center;
}
.goods-box .goods-img {
  width: 320rpx;
  height: 320rpx;
}
.goods-operation {
  position: relative;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #FE224A;
  border-radius: 50rpx;
  margin-top: 40rpx;
  margin-bottom: 30rpx;
  color: #fff;
  box-sizing: border-box;
}
.s-cart {
  width: 55rpx;
  height: 55rpx;
  position: absolute;
  top: 20rpx;
  right: 40rpx;
}
.goods-operation text {
  display: inline-block;
}
.total-sub, .total-add {
  width: 80rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.addCart {
  margin-left: 30rpx;
}
.goods-tab-box {
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  color: #c7c7cb;
  border-bottom: 1px solid #cbcbcb;
}
.goods-tab-nav.on {
  color: #FE224A;
  border-bottom: 5px solid #FE224A;
}
.goods-tab-nav {
  flex: 1;
  text-align: center
}