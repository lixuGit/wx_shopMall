/* pages/component/person/person.wxss */
.userInfo {
  width: 750rpx;
  height: 300rpx;
  background: #FE224A;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userInfo-avatar {
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  margin-top: 0;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0,0,0, 0.2);
}
.userInfo-integral {
  width: 450rpx;
  height: 40rpx;
  border-radius: 18rpx;
  background: #FEE96A;
  font-size: 12px;
  padding:0 20rpx;
  margin: 20rpx;
  text-align: center;
  color: #FE2C49;
  opacity: 0.8
}
.userInfo-order {
  padding: 3%;
  width: 94%;
  font-size: 12px;
  border-bottom: 1px solid #eee;
  background: #fff;
  color: #666;
  margin-top: 20rpx;
}
.userInfo-order .my-order {
  font-size: 13px;
  color: #333;
}
.userInfo-order .check-order {
  font-size: 12px;
  float: right;
  color: #999;
}
.ship-status {
  display: flex;
  text-align: center;
  padding: 20rpx;
  background: #fff;

}
.ship-nav {
  flex: 1;
}
.ship-nav .ship-img {
  width: 24px;
  height: 24px;
}
.ship-text {
  font-size: 12px;
}

.my-info {
  display: flex;
  background: #fff;
  margin-top: 20rpx;
  text-align: center;
  padding:20rpx;
  flex-wrap: wrap;
  font-size: 12px;
}
.my-nav {
  width: 25%;
  margin-bottom: 50rpx;
}
.my-nav image {
  width: 24px;
  height: 24px;
}